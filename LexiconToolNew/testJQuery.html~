<script type="text/javascript" src="jquery/js/jquery-1.5.1.min.js"></script>
<script type="text/javascript" src="jquery/js/jquery-ui-1.8.11.custom.min.js"></script>

<script>

$(function() {
 $( "#draggable" ).draggable({axis: "y", stop: function(event, ui) { resizeWindowParts(ui); } });
 });

function resizeWindowParts(ui) {
 var iNewHeight = document.getElementById('top').offsetHeight + ui.position.top;
 document.getElementById('top').style.height = iNewHeight + 'px';
}

</script>


